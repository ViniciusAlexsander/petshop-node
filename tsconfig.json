{
   "compilerOptions": {
      "lib": [
         "es5",
         "es6"
      ],
      "target": "ES6",
      "module": "commonjs",
      "baseUrl": "src",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "outDir": "./build",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true
   }
}

